auth_enabled: true

server:
  http_listen_port: 3100

common:
  path_prefix: /tmp/loki
  storage:
    filesystem:
      chunks_directory: /tmp/loki/chunks
      rules_directory: /tmp/loki/rules
  replication_factor: 1
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: inmemory

compactor:
  working_directory: /tmp/loki/compactor
  compaction_interval: {{ loki_compaction_interval }}
  retention_enabled: {{ loki_retention_enabled }}
  retention_delete_delay: {{ loki_retention_delete_delay }}
{% if loki_store == "gcs" %}
  shared_store: gcs
{% elif loki_store == "s3" %}
  shared_store: s3
{% endif %}
storage_config:
  boltdb_shipper:
    active_index_directory: /loki/boltdb-shipper-active
    cache_location: /loki/boltdb-shipper-cache
    cache_ttl: 24h
{% if loki_store == "gcs" %}
    shared_store: gcs
  gcs:
    bucket_name: {{ loki_store_bucket_name }}
{% elif loki_store == "s3" %}
    shared_store: s3
  aws:
    s3: s3://{{ loki_store_s3_region }}
    bucketnames: {{ loki_store_bucket_name }}
{% endif %}

schema_config:
  configs:
    - from: 2020-10-24
      store: boltdb-shipper
{% if loki_store == "gcs" %}
      object_store: gcs
{% elif loki_store == "s3" %}
      object_store: s3
{% endif %}
      schema: v11
      index:
        prefix: index_
        period: 24h

ruler:
  alertmanager_url: http://localhost:9093
  
# https://github.com/grafana/loki/issues/4613#issuecomment-1045993131  
query_scheduler:
  max_outstanding_requests_per_tenant: 2048
query_range:
  parallelise_shardable_queries: false
  split_queries_by_interval: 0

# https://github.com/grafana/loki/issues/4509
limits_config:
  max_query_length: 0
  retention_period: {{ loki_retention_period }}
  retention_stream:
    - selector: '{role="webserver"}'
      priority: 1
      period: 2232h
    - selector: '{role="audit"}'
      priority: 10
      period: 44544h