positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://loki:3100/loki/api/v1/push
    tenant_id: {{ loki_tenant_id }}

scrape_configs:
- job_name: system
  static_configs:
  - targets:
      - localhost
    labels:
      job: varlogs
      __path__: /var/log/syslog
  - targets:
      - localhost
    labels:
      job: varlogs
      role: loki
      __path__: /var/log/docker-compose-service/loki.log